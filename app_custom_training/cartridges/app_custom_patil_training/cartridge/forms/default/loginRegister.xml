<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">

    <field
			formid="email" label="label.input.email.profile" 
			mandatory="true" 
			max-length="50" 
			min-length = "4"
			missing-error="address.email.missing"
			parse-error="error.message.parse.email.profile.form"
			range-error="error.message.50orless"
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" 
			value-error="ValueErrorText"
			type="string"
			validation = "${require('~/cartridge/scripts/ass23.js').alreadyPresent(formfield);}"
			/> 

    <field 
			formid="firstname" label="label.input.firstname.profile" mandatory="true" min-length = "4" max-length="50"
			missing-error="error.message.required" range-error="error.message.50orless" type="string" />

    <field 
			formid="lastname" label="label.input.lastname.profile" mandatory="true" min-length = "4" max-length="50" 
			missing-error="error.message.required" range-error="error.message.50orless" type="string" />

    <group formid="cat">
        <field 
			formid="mens" label="label.input.mens.profile" type="boolean"/>

        <field 
			formid="womens" label="label.input.womens.profile" type="boolean"/>

        <field 
			formid="electronics" label="label.input.electronics.profile" type="boolean"/>
    </group>

    <field 
        formid="country" label="label.input.country" type="string" mandatory="true" binding="countryCode"
		missing-error="address.country.missing">
        <options>
            <option optionid="" label="" value=""/>
            <option optionid="IND" label="country.cc.India" value="IND"/>
            <option optionid="PK" label="country.cc.Pakistan" value="PK"/>
            <option optionid="AUS" label="country.cc.Australia" value="AUS"/>
            <option optionid="SK" label="country.cc.SouthKorea" value="SK"/>
            <option optionid="NK" label="country.cc.NorthKorea" value="NK"/>
        </options>
    </field>
</form>
